generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String? @unique(map: "sqlite_autoindex_users_1")
  password String?

  @@map("users")
}

model File {
  id         Int     @id @default(autoincrement())
  user_id    Int?
  filename   String?
  path       String?
  created_at String?

  @@map("files")
}

model Log {
  id         Int     @id @default(autoincrement())
  user_id    Int?
  message    String?
  created_at String? @default("datetime('now')")

  @@map("logs")
}

model Plan {
  id            Int     @id @default(autoincrement())
  name          String?
  storage_gb    Int?
  price_monthly Float?

  @@map("plans")
}
